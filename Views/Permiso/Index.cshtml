@model IEnumerable<FinalProg3_prueba2.Permisos>

@{
    ViewBag.Title = "Index";
}

<h2>Permisos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @using (Html.BeginForm("Index", "Permiso", FormMethod.Get))
    {
        <fieldset>
            <legend>Buscar usuario por nombre</legend>
            @Html.TextBox("BuscarPor", null, new { @class = "form-control" })
            <br />
        </fieldset>
        <input type="submit" name="Buscar" value="Buscar" class="btn btn-primary" />
        <br />
        <br />
        <br />
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_permiso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleados.Id_empleado)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Empleados.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Desde)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hasta)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentario)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id_permiso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleados.Id_empleado)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empleados.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Desde)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hasta)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comentario)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id_permiso }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id_permiso }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id_permiso })
        </td>
    </tr>
}

</table>
